# BBX Console Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=bbx
POSTGRES_PASSWORD=bbx_secret_2024
POSTGRES_DB=bbx_console

# Full database URL (used by backend)
DATABASE_URL=postgresql+asyncpg://bbx:bbx_secret_2024@postgres:5432/bbx_console

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# BACKEND
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:3000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# BBX Core path (relative to backend container)
BBX_CORE_PATH=/app/bbx

# =============================================================================
# FRONTEND
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# =============================================================================
# MONITORING (Optional - for production profile)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# AI INTEGRATION (Optional)
# =============================================================================
# For AI task decomposition
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Set to 'production' to enable nginx reverse proxy
# COMPOSE_PROFILES=production

# Set to 'monitoring' to enable Prometheus + Grafana
# COMPOSE_PROFILES=monitoring

# Combine profiles:
# COMPOSE_PROFILES=production,monitoring
